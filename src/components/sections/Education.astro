---
import CVSection from "../CVSection.astro";
import { education } from "@cv-en";
---

<CVSection heading="Education">

  <ul>
    {
      education.map(({ institution, startDate, endDate, area }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate !== null ? new Date(endDate).getFullYear() : "Present";
        const years = `${startYear} - ${endYear}`;

        return (
          <li>
            <article class="space-y-2">
              <header class="flex justify-between">
                <div>
                  <h3 class="text-lg font-bold">{institution}</h3>
                  <p class="text-zinc-800">{area}</p>
                </div>
                <time>{years}</time>
              </header>

              <!--<footer>-->
              <!--  <p>{summary}</p>-->
              <!--</footer>-->
            </article>
          </li>
        );
      })
    }
  </ul>
</CVSection>
